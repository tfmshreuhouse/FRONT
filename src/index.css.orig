  border: solid #152f4e;
  margin-top: 9px;
}

.select-div{
  padding: 2%;
  border-radius: 50px;
  text-align: center;
  border: solid #152f4e;
  margin-top: 9px;
}

.button-home{
  padding: 3%;
  background-color: #152f4e;
  border-radius: 23px;
  margin: 0px auto;
}
.recuadro-filtro{
  display: grid; 
  background-color: #152f4e;
  border: solid 0px;
  border-radius: 15px;
  padding: 15px;
}
.recuadro{
  display: flex;
  padding: 0px 7%;
}
.div-card{
  width: 60%;
  margin: 0px 20px;
  display: flex;
}
.card-home{
  width: 50%;
  margin: 0px 30px;
  display: grid;
}
.imagen{
  width: 60%;
  margin: 0px auto;
}

.my-button {
  /* padding: 10px 20px; */
  background-color: #152f4e;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
.main-container {
  width: 1000px;
  height: 500px;
  margin: 0 auto;
}
.image-container{
  width: 100%;
  border: solid green;
}

.infoPrincipal-box {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}

.title-box,
.description-box {
  width: calc(50% - 20px);
  margin-top: 20px;
  padding: 10px;
  box-sizing: border-box;
}

.title-box {
  text-align: center;
  border: solid #0F1C65;
  border-radius: 20px;
}

.description-box {
  text-align: center;
  border: solid #0F1C65;
  border-radius: 20px;
  background-color: #94A0E3;
}

.details-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%; /* Ajuste para que los elementos ocupen todo el ancho */
}

.details-box > p {
  flex-basis: calc(50% - 20px); /* Ajuste para dejar espacio entre los elementos */
  padding: 10px; /* Añade un espacio interior para separar el contenido del borde */
  box-sizing: border-box; /* Asegura que el padding se incluya en el tamaño total */
}

.button-container {
  text-align: center;
  margin-top: 20px;
}

.estrellas {
  display: flex;
  gap: 5px;
}

.estrella {
  cursor: pointer;
}

