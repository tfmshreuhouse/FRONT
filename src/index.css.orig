@import 'primeflex/primeflex.css';

.container {
  display: flex;
  flex-wrap: wrap;
}

.column {
  flex: 1;
  margin: 0.5rem;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color:whitesmoke;
}

.vista-azul {
  background-color: #3498db;
  color: #fff;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  display: grid;
}

.contenedor-botones {
  display: flex;
  gap: 10px; /* Espaciado entre botones */
}

.titulo-container {
  margin-bottom: 20px;
  margin: 0px auto;
  text-align: center;
}

.nva-home{
  border: solid;
  margin-top: 4%;
  padding: 18px;
  width: 100%;
}

.div-home{
  width: 92%;
  display: inline-flex;
  padding: 4%;
  text-align: center;
}

.input-div{
  padding: 2%;
  border-radius: 50px;
  text-align: center;
  border: solid #152f4e;
  margin-top: 9px;
}

.product-grid-item {
  width: 100%;
  margin-bottom: 20px; /* Espacio entre cada elemento */
}

.text-area-div{
  padding: 2%;
